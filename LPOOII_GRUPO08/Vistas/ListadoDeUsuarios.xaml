<Window x:Class="Vistas.ListadoDeUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ListadoDeUsuarios" Height="300" Width="349" Loaded="Window_Loaded">
    <Grid Name="grid_content" Background="Black">
        <DataGrid AutoGenerateColumns="False" Height="136" Margin="21,84,28,0" Name="dataGrid1" VerticalAlignment="Top" SelectionChanged="dataGrid1_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdUsuario}" />
                <DataGridTextColumn Header="Usuario" Binding="{Binding UserName}" />
                <DataGridTextColumn Header="Contraseña" Binding="{Binding Password}" />
                <DataGridTextColumn Header="Apellido" Binding="{Binding Apellido}" />
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" />
                <DataGridTextColumn Header="Rol" Binding="{Binding Rol}" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="21,48,0,0" Name="textBox1" VerticalAlignment="Top" Width="161" Text="" />
        <Button Content="Filtrar" Height="23" HorizontalAlignment="Right" Margin="0,48,64,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
    </Grid>
</Window>


